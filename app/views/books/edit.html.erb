<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


   <h4>Title</h4>
   <%= f.text_field :title %>

   <h4>Body</h4>
   <%= f.text_area :body %>
  
  <br>
  <%= f.submit 'Update Book' %><br>
  
  <a class="show_1" href="/book/1">Show</a>
  <a class="back" href="/books">Back</a>

<% end %>
